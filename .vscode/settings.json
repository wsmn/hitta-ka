{
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnSave": true,
  "[erb]": {
    "editor.tabSize": 2
  },
  "[rb]": {
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.tabSize": 2
  },
  "[js]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "ruby.lint": {
    "standard": {
      "useBundler": true,
    }
  },
  "ruby.format": "standard",
  "ruby.useLanguageServer": true
}
