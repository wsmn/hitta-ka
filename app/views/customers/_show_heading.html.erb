<div class="w-full inline-flex justify-between p-4 lg:px-6 lg:py-4 bg-gray-900 border-b-8 border-green-500">
  <div class="text-sm font-medium text-white">
    <div class="flex items-center">
      <%= link_to(customers_path, class: 'text-gray-500') do %>
        <%= t('.customers') %>
      <% end %> <svg class="h-5 w-5 inline-block mt-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd" />
      </svg>
      <span class="">
        <%= @customer.name %>
      </span>
    </div>
    <h1 class="text-3xl font-extrabold md:font-bold mt-2 lg:mt-1">
      <%= @customer.name %>
    </h1>
  </div>
  <div class="flex flex-col-reverse md:flex-row">
    <div @click.away="open = false" class="flex justify-end" x-data="{ open: false }">
      <div class="flex items-start justify-end">
        <%= link_to(new_customer_project_path(@customer),
        class: 'btn btn-green normal-case rounded-l rounded-r-none
        text-white text-base mt-2 md:mt-0') do %>
          <%= t('.new_project') %>
        <% end %>
        <div @click="open = !open" class="bg-green-800 hover:bg-green-900 border border-green-800 hover:border-green-900 rounded-r h-10 flex justify-end items-center mt-2 md:mt-0">
          <svg class="h-8 w-5 mx-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
              clip-rule="evenodd" />
          </svg>
          <div x-show="open" class="absolute mt-16 w-32 rounded">
            <div class="rounded bg-white border border-gray-400">
              <%= link_to(new_customer_invoice_path(@customer), class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 rounded-t') do %>
                <%= t('.invoice') %>
              <% end %>
              <%= link_to(projects_path, class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 rounded-b') do %>
                <%= t('.more') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div @click.away="open = false" class="flex justify-end" x-data="{ open: false }">
      <div class="flex items-start justify-end">
        <%= link_to(edit_customer_path(@customer),
        class: 'btn btn-blue normal-case rounded-l rounded-r-none
        text-white text-base md:ml-4') do %>
          <%= t('.edit_customer') %>
        <% end %>
        <div @click="open = !open" class="bg-blue-800 hover:bg-blue-900 border border-blue-800 hover:border-blue-900 rounded-r h-10 flex justify-end items-center">
          <svg class="h-8 w-5 mx-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
              clip-rule="evenodd" />
          </svg>
          <div x-show="open" class="absolute mt-16 w-32 rounded">
            <div class="rounded bg-white border border-gray-400">
              <%= link_to(projects_path, class: 'block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 rounded-t') do %>
                <%= t('.archive') %>
              <% end %>
              <%= link_to(t('.delete_customer'),
              customer_path(@customer),
              method: :delete,
              class: "block px-4 py-2 text-sm text-white bg-red-600 hover:text-white hover:bg-red-400 rounded-b",
              data: { confirm: t('.delete_confirm')}) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
