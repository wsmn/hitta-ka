<% search = false if search.nil?%>
<div class="bg-white border border-gray-300 shadow-md">
  <div class="flex-grow flex justify-between items-center h-16 border-b border-gray-300 px-4">
    <div class="flex">
      <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center border-b-2 border-green-600 text-green-600 font-semibold">
        <%= t('.active') %>
      </div>
      <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center text-gray-700 hover:font-semibold hover:text-green-500">
        <%= t('.archived') %>
      </div>
      <div class="w-20 h-16 px-3 mr-2 -mb-px flex justify-center items-center text-gray-700 hover:font-semibold hover:text-green-500">
        <%= t('.all') %>
      </div>
    </div>
  </div>
  <div class="flex-grow">
    <div class="border-b bg-gray-100">
      <div class="flex-grow flex py-4">
        <div class="px-2 sm:px-4 xl:px-6 flex justify-center items-center">
          <div class="w-8 md:w-10">
          </div>
        </div>
        <div class="flex-grow flex uppercase text-xs md:text-sm font-semibold text-blue-900">
          <div class="w-1/3 lg:w-1/5">
            <%= t('.name') %>
          </div>
          <div class="w-1/3 lg:w-1/5 pr-2">
            <%= t('.latest_project') %>
          </div>
          <div class="w-1/5 hidden lg:flex pr-2">
            <%= t('.active_projects') %>
          </div>
          <div class="w-1/3 lg:w-1/5">
            <%= t('.unpaid') %>
          </div>
          <div class="w-1/5 lg:w-1/5 hidden lg:flex">
            <%= t('.status') %>
          </div>
        </div>
        <div class="w-1/6 lg:w-1/6 flex lg:hidden uppercase text-xs md:text-sm font-semibold text-blue-900">
          <%= t('.status') %>
        </div>
      </div>
    </div>
    <% if (customers.empty?) %>
      <% if search %>
        <%= render('customers/empty') %>
      <% else %>
        <%= render('customers/empty_search') %>
      <% end %>
    <% else %>
      <% customers.each_with_index do |customer, idx| %>
        <%= render("customers/row", customer: customer, odd: idx % 2 == 0) %>
      <% end %>
    <% end %>
    <div class="px-3 bg-white flex flex-col xs:flex-row items-end justify-center">
      <div class="px-2 align-middle inline-flex flex items-center py-4">
        <%= render partial: 'pagy/nav', locals: {pagy: pagy} %>
      </div>
    </div>
  </div>
</div>
