<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :customers) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title')%>
<% end %>
<div class="w-full pb-4 overflow-y-auto lg:flex-grow sm:px-4 sm:py-2 lg:px-8 lg:py-6">
  <div class="flex-grow mx-auto">
    <div class="w-full px-2 pt-2 pb-1 lg:p-0">
      <div class="flex items-center">
        <%= link_to(customers_path, class: 'text-gray-500') do %>
          <%= t('.customers') %>
        <% end %><svg class="inline-block w-5 h-5 mt-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd" />
        </svg>
        <%= link_to(customer_path, class: 'text-gray-500') do %>
          <%= @customer.name %>
        <% end %> <svg class="inline-block w-5 h-5 mt-px text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd" />
        </svg>
        <span class="">
          <%= t('.edit_customer') %>
        </span>
      </div>
    </div>
    <%= render('form', customer: @customer, organisations: @organisations) %>
    <div class="pb-16">
      <div class="flex flex-col flex-wrap w-full bg-white rounded-md xl:w-5/6 lg:mt-3">
        <div class="h-12 px-3 py-2 bg-red-500 rounded-t-md">
          <h1 class="text-lg font-semibold text-white xl:text-xl"><%= t('.danger_zone') %></h1>
        </div>
        <div class="flex w-full p-4 border-b border-l border-r border-gray-600 rounded-b-md">
          <div class="flex flex-col">
            <p><%= t('.delete_customer') %></p>
            <%= render('application/delete_button',
                     path: customer_path(@customer),
                     title: t('.delete'),
                     confirmation: t('.delete_confirm'))%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
