<div class="container mx-auto">
  <div class="mt-4 md:mt-10 lg:mt-24">
    <div class="w-11/12 mx-auto md:w-full text-center">
      <h1 class="text-2xl md:text-4xl lg:text-5xl font-sans font-bold text-gray-200">
        <%= t('.how_can_we_help_you?') %>
      </h1>
      <div class="w-4/5 mx-auto">
        <p class="font-medium text-sm md:text-base text-blue-500 mt-8">
          <%= t('.choose_an_appropriate_category_below_and_we_will_contact_you_as_soon_as_possible') %>
        </p>
      </div>
    </div>
    <div class="w-11/12 md:w-full mx-auto">
      <div class="px-2 mt-8 md:mt-24">
        <div class="flex flex-wrap mx-0 lg:-mx-8">
          <div class="w-4/5 lg:w-1/3 max-w-xl mx-auto px-0 md:px-8">
            <div class="bg-white rounded shadow-2xl h-32 md:h-56 hover:bg-blue-200">
              <%= link_to(support_error_path) do %>
                <div class="p-4 lg:p-8">
                  <figure class="media-left flex md:hidden">
                    <span class="icon text-blue-500">
                      <i class="fas fa-lg fa-tools"></i>
                    </span>
                  </figure>
                  <figure class="media-left hidden md:flex ml-1">
                    <span class="icon text-blue-500">
                      <i class="fas fa-2x fa-tools"></i>
                    </span>
                  </figure>
                  <h1 class="text-sm md:text-xl font-bold text-blue-900 mt-1 md:mt-3">
                    <%= t('.website_issues') %>
                  </h1>
                  <p class="font-medium text-sm md:text-base text-blue-900 mt-2 md:mt-8">
                    <%= t('.have_you_found_any_errors_on_the_website_or_in_the_documentation') %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
          <div class="w-4/5 lg:w-1/3 max-w-xl mx-auto mt-8 lg:mt-0 px-0 md:px-8">
            <div class="bg-white rounded shadow-2xl h-32 md:h-56 hover:bg-blue-200">
              <%= link_to(support_general_path) do %>
                <div class="p-4 lg:p-8">
                  <figure class="media-left flex md:hidden">
                    <span class="icon text-blue-500">
                      <i class="fas fa-lg fa-lightbulb"></i>
                    </span>
                  </figure>
                  <figure class="media-left hidden md:flex">
                    <span class="icon text-blue-500">
                      <i class="fas fa-2x fa-lightbulb"></i>
                    </span>
                  </figure>
                  <h1 class="text-sm md:text-xl font-bold text-blue-900 mt-1 md:mt-3">
                    <%= t('.general_support') %>
                  </h1>
                  <p class="font-medium text-sm md:text-base mt-2 md:mt-8">
                    <%= t('.is_there_something_that_you_need_help_with_contact_us') %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
          <div class="w-4/5 lg:w-1/3 max-w-xl mx-auto mt-8 lg:mt-0 px-0 md:px-8 mb-20 lg:mb-0">
            <div class="bg-white rounded shadow-2xl h-32 md:h-56 hover:bg-blue-200">
              <%= link_to(support_improvement_path) do %>
                <div class="p-4 lg:p-8">
                  <figure class="media-left flex md:hidden">
                    <span class="icon text-blue-500">
                      <i class="fas fa-lg fa-headphones-alt"></i>
                    </span>
                  </figure>
                  <figure class="media-left hidden md:flex">
                    <span class="icon text-blue-500">
                      <i class="fas fa-2x fa-headphones-alt"></i>
                    </span>
                  </figure>
                  <h1 class="text-sm md:text-xl font-bold text-blue-900 mt-1 md:mt-3">
                    <%= t('.improvements') %>
                  </h1>
                  <p class="font-medium text-sm md:text-base mt-2 md:mt-8">
                    <%= t('.do_you_have_any_suggestions_how_we_can_improve') %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
