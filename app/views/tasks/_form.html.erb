<% local = true if local.nil? %>
<%= form_with(model: [project, task], local: local, class: "w-full xl:max-w-3xl pb-8") do |form| %>
  <div class="flex flex-wrap -mx-2">
    <div class="w-full lg:w-2/3 px-2">
      <div class="flex flex-wrap bg-white rounded-md border border-gray-600">
        <div class="w-full h-12 bg-gray-800 px-3 py-2 rounded-t flex items-center">
          <h1 class="text-white font-semibold font-semibold text-xl xl:text-2xl">
            <% if task.persisted? %>
              <%= t('.update_task') %>
            <% else %>
              <%= t('.new_task') %>
            <% end %>
          </h1>
        </div>
        <div class="w-full mt-2 px-4 py-2 lg:px-8 lg:py-4">
          <div class="flex flex-wrap -mx-3">
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:title, class: "form-label lg:mb-2") %>
                  <%= form.text_field(:title, id: 'title', autofocus: true, placeholder: 'Title',
                          class: "form-input mt-2") %>
                </div>
                <div class="w-full md:w-1/2 px-3">
                  <div class="relative">
                    <%= form.label(:status, class: "form-label lg:mb-2") %>
                    <%= form.select(:status, task_statuses, {},
                                  id: 'status',
                                  class: 'form-input mt-2') %>
                    <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                            flex items-center px-2 text-gray-600">
                      <%= render('application/icons/arrow_down') %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full px-3">
                  <%= form.label(:description, class: "form-label lg:mb-2") %>
                  <%= form.text_area(:description, id: 'description', placeholder: 'Describe your task...',
                          class: "form-input mt-2 h-24") %>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-1/2 md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:date, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center text-gray-700">
                      <%= render('application/icons/calendar') %>
                    </div>
                    <%= form.date_field(:date, id: 'date',
                          class: "form-input rounded-l-none mt-2 date-picker") %>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-1/2 md:w-1/3 px-3 mb-6 md:mb-0">
                  <%= form.label(:hours, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-16 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center text-gray-700">
                      <%= render('application/icons/clock') %>
                    </div>
                    <%= form.number_field(:hours, step: 0.25, id: 'hours',
                          class: "form-input rounded-l-none mt-2 px-1") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full flex border-t border-gray-400 p-4 mt-2">
          <div class="w-full flex justify-end items-center">
            <div class="w-20 mr-2">
              <%= link_to(t('.cancel'), customer_project_path(project.customer, project), class: "w-full text-red-500 uppercase font-bold text-sm hover:text-red-300") %>
            </div>
            <div class="w-30">
              <%= form.submit(class: "py-2 px-2 w-full uppercase no-underline
                                      rounded bg-green-500 text-white font-bold text-sm
                                      hover:text-white hover:bg-green-400 focus:outline-none
                                      ") %> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
