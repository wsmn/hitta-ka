<% local = true if local.nil? %>
<%= form_with(model: [project, task], local: local, class: "w-full xl:max-w-3xl") do |form| %>
  <div class="flex items-center px-4 py-2">
    <div
    class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100 sm:mx-0 sm:h-12 sm:w-12">
      <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    <div class="ml-4 mb-4 mt-4">
      <h3 class="text-2xl leading-6 font-medium text-gray-900">
        <% if task.persisted? %>
          <%= t('.update_task') %>
        <% else %>
          <%= t('.new_task') %>
        <% end %>
      </h3>
      <p class="text-sm text-gray-600">
        Create a timelog for your project.
      </p>
    </div>
  </div>
  <div class="flex flex-wrap">
    <div class="w-full px-6">
      <div class="flex flex-wrap -mx-3">
        <div class="w-full">
          <div class="flex flex-wrap mb-6">
            <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
              <%= form.label(:title, class: "form-label lg:mb-2") %>
              <%= form.text_field(:title, id: 'title', autofocus: true, placeholder: 'Title',
                        class: "form-input mt-2") %>
            </div>
            <div class="w-full md:w-1/2 px-3">
              <div class="relative">
                <%= form.label(:status, class: "form-label lg:mb-2") %>
                <%= form.select(:status, task_statuses, {},
                                id: 'status',
                                class: 'form-input mt-2') %>
                <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                          flex items-center px-2 text-gray-600">
                  <%= render('application/icons/arrow_down') %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full">
          <div class="flex flex-wrap mb-4 md:mb-6">
            <div class="w-full px-3">
              <%= form.label(:description, class: "form-label lg:mb-2") %>
              <%= form.text_area(:description, id: 'description', placeholder: 'Describe your task...',
                        class: "form-input mt-2 h-24") %>
            </div>
          </div>
        </div>
        <div class="w-full">
          <div class="flex flex-wrap mb-4 md:mb-6">
            <div class="w-2/3 md:w-1/2 px-3">
              <%= form.label(:date, class: "form-label lg:mb-2") %>
              <div class="mt-1 flex rounded-md shadow-sm">
                <span
                class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-400 bg-gray-50 text-gray-500 sm:text-sm">
                  <%= render('application/icons/calendar') %>
                </svg>
              </span>
              <%= form.date_field(:date, id: 'date',
              class: "form-input flex-1 block w-full px-3 py-2 h-10 rounded-none rounded-r-md sm:leading-5 date-picker") %>
            </div>
          </div>
        </div>
      </div>
      <div class="w-full">
        <div class="flex flex-wrap mb-2">
          <div class="w-1/2 md:w-1/3 px-3">
            <%= form.label(:hours, class: "form-label lg:mb-2") %>
            <div class="mt-1 flex rounded-md shadow-sm">
              <span
                class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-400 bg-gray-50 text-gray-500 sm:text-sm">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </span>
              <%= form.number_field(:hours, step: 0.25, id: 'hours',
                class: "form-input flex-1 block w-full px-3 py-2 rounded-none rounded-r-md sm:leading-5") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex-grow mt-5 sm:mt-4 flex items-end justify-end p-4 border-t">
    <span class="flex rounded-md shadow-sm">
      <button @click="openModal = false" type="button"
        class="inline-flex justify-center w-full rounded-md border border-gray-300 px-4 py-2 bg-white text-base leading-6 font-medium text-gray-700 shadow-sm hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:border-blue-300 focus:shadow-outline transition ease-in-out duration-150 sm:text-sm sm:leading-5">
        <%=  t('.cancel') %>
      </button>
    </span>
    <span class="flex rounded-md shadow-sm ml-4">
      <%= form.submit(class: "inline-flex justify-center w-full rounded-md border border-transparent px-4 py-2 bg-green-500 text-base leading-6 font-medium text-white shadow-sm hover:bg-green-500 focus:outline-none focus:border-green-600 focus:shadow-outline-green sm:text-sm sm:leading-5 btn-bounce
    ") %></span>
  </div>
</div>
<% end %>
