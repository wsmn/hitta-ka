<%= link_to(project_task_path(task.project, task),
  class: "flex w-full px-3 xl:px-6 py-4 text-gray-900 items-center border-b border-gray-200 text-sm hover:bg-indigo-100") do %>
  <div class="flex items-center w-1/2 pr-2 break-all xl:w-2/5">
    <div class="flex items-center">
      <div class="flex items-center flex-shrink-0 w-10 h-10">
        <div class="flex items-center justify-center w-8 h-8 text-white bg-indigo-500 rounded-full xl:h-10 xl:w-10">
          <svg class="w-5 h-5 xl:w-7 xl:h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <div class="ml-2 sm:ml-3 xl:ml-4">
        <div class="text-base leading-5 text-gray-800"><%= task.title %>
        </div>
        <div class="text-xs leading-5 text-gray-500 sm:text-sm"><%= task.project %></div>
      </div>
    </div>
  </div>
  <div class="flex justify-center w-1/3">
    <%= l(task.updated_at, format: "%Y-%m-%d %H:%M") if task.updated_at %>
  </div>
  <div class="w-1/4 px-2 xl:w-1/5 md:px-4">
    <div class="text-center text-gray">
      <%= task.hours %> h
    </div>
  </div>
  <div class="flex justify-end w-1/12">
    <%= project_tag_mobile(task.project.status) %>
  </div>
<% end %>
