<% current ||= nil %>
<div class="z-30 inset-y-0 left-0 account-menu-width bg-gray-900 overflow-y-auto static hidden lg:block">
  <nav class="mt-6">
    <div class="px-6">
      <p class="text-xs text-gray-600 font-semibold uppercase tracking-wide ml-4">
        Main
      </p>
      <div class="mt-2">
        <%= link_to(account_url, class: header_active("accounts#show", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="ml-3">
              <%= t('.home') %>
            </span>
          </span>
        <% end %>
        <%= link_to(projects_path, class: header_active("projects#index", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <span class="ml-3">
              <%= t('.projects') %>
            </span>
          </span>
          <span
          class="inline-block w-9 text-center py-1 leading-none text-xs font-semibold text-gray-700 bg-gray-300 rounded-full">
            25
          </span>
        <% end %>
        <% if current == :projects %>
          <%= sidebar_link(current == :project_active, projects_path, link_class: "mt-1 px-12 py-2 flex items-center text-white font-medium hover:bg-gray-700 rounded-lg") do %>
            <span class="inline-flex">
              <span class="font-light text-sm">
                <%= t('.active_projects') %>
              </span>
            </span>
          <% end %>
          <%= sidebar_link(current == :project_paused, projects_path, link_class: "mt-1 px-12 py-2 flex items-center text-white font-medium hover:bg-gray-700 rounded-lg") do %>
            <span class="inline-flex">
              <span class="font-light text-sm">
                <%= t('.paused_projects') %>
              </span>
            </span>
          <% end %>
          <%= sidebar_link(current == :project_archived, projects_path, link_class: "mt-1 px-12 py-2 flex items-center text-white font-medium hover:bg-gray-700 rounded-lg") do %>
            <span class="inline-flex">
              <span class="font-light text-sm">
                <%= t('.archived_projects') %>
              </span>
            </span>
          <% end %>
        <% end %>
        <%= link_to(customers_path, class: header_active("customers#index", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span class="ml-3">
              <%= t('.customers') %>
            </span>
          </span>
        <% end %>
        <%= link_to(tasks_path, class: header_active("presentation#tasks", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="ml-3">
              <%= t('.tasks') %>
            </span>
          </span>
        <% end %>
        <% if current == :tasks %>
          <%= sidebar_link(current == :tasks, tasks_path, link_class: "mt-1 px-12 py-2 flex items-center text-white font-medium hover:bg-gray-700 rounded-lg") do %>
            <span class="inline-flex">
              <span class="font-light text-sm">
                <%= t('.standard_tasks') %>
              </span>
            </span>
          <% end %>
        <% end %>
        <%= link_to(invoices_path, class: header_active("presentation#invoices", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            <span class="ml-3">
              <%= t('.invoices') %>
            </span>
          </span>
        <% end %>
        <p class="mt-4 text-xs font-semibold text-gray-600 uppercase tracking-wide ml-4">
          <%= t('.settings') %>
        </p>
        <%= link_to(settings_path, class: header_active("accounts#settings", "mt-2 -mx-3 px-3 py-2 flex items-center justify-between text-gray-200 hover:text-white font-medium hover:bg-gray-700 rounded-lg", "bg-gray-700 rounded-lg")) do %>
          <span class="inline-flex flex items-center">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="ml-3">
              <%= t('.settings') %>
            </span>
          </span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
