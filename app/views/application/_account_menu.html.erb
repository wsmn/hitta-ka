<% current ||= nil %>

<div class="z-30 inset-y-0 left-0 w-64 bg-gray-900 border-r overflow-y-auto static hidden lg:block">
  <nav class="">
    <div class="">
      <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide ml-4">
        Main
      </p>
      <ul class="menu-list mt-1">
        <li>
          <%= sidebar_link(current == :account, account_path, icon: "home", text: t(".home")) %>
        </li>
        <li>
          <%= sidebar_link(current == :projects, projects_path, icon: "tasks", text: t(".projects")) %>
          <% if current == :projects %>
            <ul class="mt-2 bg-gray-800">
              <li>
                <%= sidebar_link(current == :project_active, projects_path, link_class: "px-12 py-3 flex items-center text-white hover:bg-gray-700") do %>
                  <span class="inline-flex">
                    <span class="font-light text-sm">
                      <%= t('.active_projects') %>
                    </span>
                  </span>
                <% end %>
              </li>
              <li class="">
                <%= link_to(projects_path, class: 'px-12 py-3 flex items-center text-white hover:bg-gray-700') do %>
                  <span class="inline-flex">
                    <span class="font-light text-sm">
                      <%= t('.paused_projects') %>
                    </span>
                  </span>
                <% end %>
              </li>
              <li class="">
                <%= link_to(projects_path, class: 'px-12 py-3 flex items-center text-white hover:bg-gray-700') do %>
                  <span class="inline-flex">
                    <span class="font-light text-sm">
                      <%= t('.archived_projects') %>
                    </span>
                  </span>
                <% end %>
              </li>
            </ul>
          <% end %>
        </li>
        <li>
          <%= sidebar_link(current == :customers, customers_path, icon: "users", text: t(".customers")) %>
        </li>
        <li>
          <%= sidebar_link(current == :tasks, tasks_path, icon: "clock", text: t(".tasks")) %>
          <% if current == :tasks %>
            <ul class="ml-8 mt-2 bg-gray-800">
              <li class="">
                <%= link_to(projects_path, class: 'px-12 py-3 flex items-center text-white hover:bg-gray-700') do %>
                  <span class="inline-flex">
                    <span class="font-light text-sm">
                      <%= t('.standard_tasks') %>
                    </span>
                  </span>
                <% end %>
              </li>
            </ul>
          <% end %>
        </li>
        <li>
          <%= sidebar_link(current == :invoices, invoices_path, icon: "file-invoice", text: t(".invoices")) %>
        </li>
      </ul>
      <p class="mt-2 text-xs font-semibold text-gray-600 uppercase tracking-wide ml-4">
        <%= t('.settings') %>
      </p>
      <ul class="menu-list mt-2">
        <li>
          <%= sidebar_link(current == :settings, settings_path, icon: "user-cog", text: t(".settings")) %>
        </li>
      </ul>
    </div>
  </nav>
</div>
