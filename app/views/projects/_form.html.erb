<% customers ||= [] %>
<% customer ||= nil %>
<%= form_with(model: [customer, project], local: true, class: "w-full max-w-screen-xl pb-8", html: { role: 'check-modified' }) do |form| %>
  <div class="flex flex-wrap -mx-2">
    <div class="w-full xl:w-2/3 px-2">
      <div class="flex flex-wrap bg-white rounded-md border border-gray-600">
        <div class="flex-grow h-12 bg-gray-800 px-3 py-2 rounded-t flex items-center -m-px">
          <h1 class="text-white font-semibold font-semibold text-xl xl:text-2xl">
            <% if project.persisted? %>
              <%= t('.edit_project') %> - <%= @project.title %>
            <% else %>
              <%= t('.new_project') %>
            <% end %>
          </h1>
        </div>
        <div class="w-full mt-2 px-4 py-2 lg:px-8 lg:py-4">
          <div class="flex flex-wrap -mx-3">
            <div class="w-full">
              <div class="flex flex-wrap mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                  <%= form.label(:title, class: "form-label lg:mb-2") %>
                  <%= form.text_field(:title, id: 'title', autofocus: true, placeholder: 'Title',
                          class: "form-input mt-2") %>
                </div>
                <div class="w-full md:w-1/2 px-3">
                  <div class="relative">
                    <%= form.label(:customer, class: "form-label lg:mb-2") %>
                    <% if customer.present? %>
                      <%= form.select(:customer_id, customers.collect { |customer| [customer.to_s, customer.id] },
                                      {}, id: 'organisation',
                                      disabled: true,
                                      class: 'form-input mt-2 bg-gray-400') %>
                    <% else %>
                      <%= form.select(:customer_id, customers.collect { |customer| [customer.to_s, customer.id] },
                                      {}, id: 'organisation',
                                      class: 'form-input mt-2') %>
                    <% end %>
                    <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                            flex items-center px-2 text-gray-700">
                      <%= render('application/icons/arrow_down') %>
                    </div>
                  </div>
                  <% unless customer.present? %>
                    <div class="w-full flex justify-end mt-1">
                      <%= link_to(new_customer_path, class: 'text-blue-500 font-medium') do %>
                        <%= t('.+_add_new_customer') %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-6 lg:mb-2">
                <div class="w-1/2 md:w-1/3 px-3 mb-6 md:mb-0">
                  <%= form.label(:idx, class: "form-label lg:mb-2") %>
                  <div class="flex">
                    <div
                    class="w-12 mt-2 bg-gray-100 rounded-l border-t border-l border-b border-gray-500 flex items-center justify-center">
                      <span class="text-gray-700">
                        #
                      </span>
                    </div>
                    <%= form.text_field(:idx, id: 'idx',
                                        class: "form-input rounded-l-none mt-2") %>
                  </div>
                </div>
                <div class="w-1/2 md:w-1/3 px-3 mb-6">
                  <div class="relative">
                    <%= form.label(:status, class: "form-label lg:mb-2") %>
                    <%= form.select(:status, project_statuses,
                                    {}, id: 'status',
                                    class: 'form-input mt-2') %>
                    <div class="mt-8 pointer-events-none absolute inset-y-0 right-0
                                  flex items-center px-2 text-gray-700">
                      <%= render('application/icons/arrow_down') %>
                    </div>
                  </div>
                </div>
                <div class="w-1/2 md:w-1/3 px-3">
                  <div class="flex justify-between mt-1 mb-1">
                    <%= form.label(:task_rate, class: "form-label lg:mb-2") %>
                    <div @click.away="open = false" x-data="{ open: false }" class="relative">
                      <div>
                        <div class="cursor-pointer texr-gray-700" @click="open = !open" @click="open = true">
                          <%= render('application/icons/info') %>
                        </div>
                        <div x-show="open"
                        class="absolute md:origin-top-right md:right-0 z-50 bg-white border border-gray-400 rounded p-4 w-64">
                          Use this option if you want to set a custom task rate for this customer. Your standard task rate
                          can be changed on the settings page.
                        </div>
                      </div>
                    </div>
                  </div>
                  <%= form.text_field(:task_rate, id: 'task_rate', placeholder: '990,00',
                class: "form-input") %>
                </div>
              </div>
            </div>
            <div class="w-full">
              <div class="flex flex-wrap mb-2">
                <div class="w-full px-3 mb-6">
                  <%= form.label(:description, class: "form-label lg:mb-2") %>
                  <%= form.text_area(:description, id: 'description', placeholder: 'Here you can write your project description...',
                          class: "form-input mt-2 h-24") %>
                </div>
              </div>
            </div>
            <%= render('form_address', form: form) %>
            <div class="w-full hidden xl:block">
              <div class="flex flex-wrap mb-2">
                <div class="w-full px-3 mb-6">
                  <%= form.label(:structure, class: "form-label lg:mb-2") %>
                  <div class="appearance-none block w-full
                              text-gray-900 border-2 border-dashed border-gray-500
                              rounded py-2 px-3 leading-tight focus:outline-none focus:shadow-outline
                              focus:border-blue-600 mt-2 h-12 flex items-center">
                    <span class="text-gray-500">Use the structure menu to add tasks to your project</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full flex items-center border-t border-gray-400 px-6 py-4 mt-2">
          <div class="w-full flex justify-end items-center">
            <div class="w-20 mr-2">
              <%= link_to(t('.cancel'), projects_path, class: "w-full text-red-500 uppercase font-bold text-sm hover:text-red-300") %>
            </div>
            <div class="w-30">
              <%= form.submit(class: "btn btn-green transition btn-bounce") %> </div>
          </div>
        </div>
      </div>
    </div>
    <div class="w-1/3 px-2 hidden xl:block">
      <div class="w-full bg-white rounded-md border border-gray-600">
        <%= render('form_structure', form: form) %>
      </div>
    </div>
  </div>
<% end %>
