<% customers ||= [] %>
<%= form_with(model: project, local: true, class: "w-full xl:w-5/6 bg-white border border-gray-400 shadow-xl rounded-lg lg:mt-3 p-2") do |form| %>
  <div class="flex flex-wrap">
    <div class="w-full lg:w-1/2 lg:p-2">
      <div class="h-12 bg-gray-800 px-3 py-2 rounded-t">
        <h1 class="text-white font-semibold font-semibold text-lg xl:text-xl"><%= t(".general") %></h1>
      </div>
      <div class="border-l border-b border-r border-gray-400 bg-white shadow p-3 xl:px-6">
        <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
          <div class="hidden lg:w-56 lg:block pr-2">
            <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0 mt-4">
              Project
            </h2>
          </div>
          <div class="w-full flex">
            <div class="w-1/2 pr-2">
              <%= form.label(:title, class: "tracking-wide leading-none text-gray-700 text-sm font-semibold mb-1 lg:mb-2") %>
              <%= form.text_field(:title, id: 'title', autofocus: true,
                                class: "text-sm appearance-none block w-full
                                        shadow text-gray-700 border border-gray-300
                                        rounded py-3 px-4 leading-tight focus:outline-none
                                        focus:bg-white focus:border-gray-500") %>
            </div>
            <div class="w-1/2 pl-2">
              <%= form.label(:id, class: "tracking-wide leading-none text-gray-700 text-sm font-semibold mb-1 lg:mb-2") %>
              <input class="text-sm appearance-none block w-full
                        shadow text-gray-700 border border-gray-300
                        rounded py-3 px-4 leading-tight focus:outline-none
                        focus:bg-white focus:border-gray-500" type="text" />
            </div>
          </div>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-1 items-center">
          <div class="w-full lg:w-56 pr-2">
            <%= form.label(:customer, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
          </div>
          <div class="w-full">
            <%= form.select(:customer_id, customers.collect { |customer| [customer.to_s, customer.id] },
                              {}, id: 'organisation',
                              class: 'text-sm appearance-none block w-full
                                      shadow text-gray-700 border border-gray-300
                                      rounded py-3 px-4 leading-tight focus:outline-none
                                      focus:bg-white focus:border-gray-500') %>
          </div>
        </div>
        <div class="w-full flex justify-end mb-2">
          <%= link_to(new_customer_path, class: 'text-blue-500 font-medium') do %>
            <%= t('.+_add_new_customer') %>
          <% end %>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
          <div class="w-full lg:w-56 pr-2">
            <%= form.label(:status, class: "text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0") %>
          </div>
          <div class="w-full">
            <div class="relative">
              <%= form.select(:status, project_statuses,
                                {}, id: 'status',
                                class: 'text-sm appearance-none block w-full
                                        shadow text-gray-700 border border-gray-300
                                        rounded py-3 px-4 leading-tight focus:outline-none
                                        focus:bg-white focus:border-gray-500') %>
            </div>
          </div>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
          <div class="w-full lg:w-56 pr-2">
            <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0">
              Project type
            </h2>
          </div>
          <div class="w-full">
            <div class="relative">
              <select class="text-sm appearance-none block w-full
                                    text-gray-700 border border-gray-300 rounded
                                    py-3 px-4 leading-tight shadow
                                    focus:outline-none focus:border-gray-500">
                <option class="text-gray-200" disabled selected>Select your option</option>
                <option>Hus</option>
                <option>Villa</option>
                <option>LÃ¤genhet</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0
                                flex items-center px-2 text-gray-700">
                <svg class="ml-2 h-6 w-6 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M15.3 9.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4
                                  0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
          <div class="w-full lg:w-56 pr-2">
            <h2 class="text-sm lg:text-base text-gray-700 font-semibold">
              Description
            </h2>
            <p class="text-xs lg:text-sm font-semibold lg:mt-1 text-gray-500 mb-1 lg:mb-0">
              Here you can write a brief description of the project.
            </p>
          </div>
          <div class="w-full">
            <textarea class="text-sm appearance-none resize-none block w-full shadow
                            text-gray-700 border border-gray-300 rounded
                            py-3 px-4 leading-tight focus:outline-none
                            focus:border-gray-500 h-24" id="subject" type="description">
                    </textarea>
          </div>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-4 items-center">
          <div class="w-full lg:w-56 pr-2">
            <h2 class="text-sm lg:text-base text-gray-700 font-semibold mb-1 lg:mb-0">
              Custom task rate
            </h2>
          </div>
          <div class="w-full">
            <input placeholder="1234" class="text-sm appearance-none block w-full shadow
                                        text-gray-700 border border-gray-300 rounded
                                        py-3 px-4 leading-tight
                                        focus:outline-none focus:border-gray-500" type="text" />
          </div>
        </div>
      </div>
      <%= render('form_address') %>
    </div>
    <div class="w-full lg:w-1/2">
      <%= render('form_structure') %>
    </div>
  </div>
  <div class="w-full flex border-t border-gray-300 pt-3 -mb-1 px-4 py-2 mt-2">
    <div class="w-full flex justify-end items-center">
      <div class="w-20 mr-2">
        <%= link_to("Cancel", projects_path, class: "w-full text-blue-600 uppercase font-bold text-sm hover:text-blue-300") %>
      </div>
      <div class="w-30">
        <%= form.submit(class: "py-2 px-2 w-full uppercase shadow-md no-underline
                                    rounded bg-blue-600 text-white font-bold text-sm
                                    hover:text-white hover:bg-blue-400 focus:outline-none
                                    active:shadow-none") %> </div>
    </div>
  </div>
<% end %>
