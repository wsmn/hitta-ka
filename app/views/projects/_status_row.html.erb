<%= link_to(customer_project_path(project.customer, project), class: "flex w-full px-3 xl:px-6 py-4 text-gray-900 items-center border-b border-gray-200 hover:bg-blue-100") do %>
  <div class="flex items-center w-1/2 break-all xl:w-2/5">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-10 h-10">
        <div class="inline-flex items-center justify-center w-8 h-8 bg-blue-500 rounded-full sm:h-10 sm:w-10">
          <span class="text-white icon">
            <i class="fas fa-lg hidden sm:inline-block <%= project.symbol %>"></i>
            <i class="fas fa-sm sm:hidden <%= project.symbol %>"></i>
          </span>
        </div>
      </div>
      <div class="ml-2 sm:ml-4">
        <div class="text-base leading-5 text-gray-800"><%= project.title %>
          <div class="hidden lg:inline-block"> -
            #<%= project.id %></div>
        </div>
        <div class="text-xs leading-5 text-gray-500 sm:text-sm"><%= project.customer.name %></div>
      </div>
    </div>
  </div>
  <div class="flex justify-center hidden w-1/3 md:flex">
    <%= l(project.created_at, format: "%Y-%m-%d") %>
  </div>
  <div class="w-1/4 px-2 xl:w-1/5 md:px-4">
    <div class="text-center text-gray">
      <%= project.hours %> h
    </div>
  </div>
  <div class="flex justify-end w-1/6 mr-8">
    <%= project_tag_mobile(project.status) %>
  </div>
<% end %>
