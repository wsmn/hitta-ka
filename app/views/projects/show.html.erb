<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :projects) %>
<% end %>
<div class="w-full overflow-y-auto lg:flex-grow pb-4 sm:px-4 sm:py-2 lg:px-8 lg:py-6">
  <div class="flex-grow mx-auto">
    <div class="w-full px-2 pt-2 pb-1 lg:p-0 inline-flex justify-between">
      <div class="">
        <h2 class="text-sm lg:text-base font-medium text-gray-500">
          <%= link_to(projects_path, class: '') do %>
            <%= t('.projects') %>
          <% end %> /
          <span class="text-gray-800"><%= @project.title %></span>
        </h2>
        <h1 class="text-3xl font-bold text-gray-800 lg:mt-1">
          <%= @project.title %> - <%= @project.id %>
          <span class="text-green-500 font-semibold rounded-full h-6 px-4">Aktivt</span>
        </h1>
      </div>
      <div class="relative flex items-start mt-2">
        <%= link_to(edit_project_path(@project),
                    class: 'bg-gray-500 border-l border-t border-b border-gray-800
                            hover:bg-gray-800 hover:border-gray-800 py-2 px-3 rounded-l
                            text-gray-900 hover:text-gray-500 font-semibold') do %>
          <%= t('.edit_project') %>
        <% end %>
        <div class="drop-down-parent bg-gray-800 border border-gray-800 rounded-r py-2 flex justify-end">
          <svg class="h-6 w-6 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M15.3 9.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4 0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z" />
          </svg>
          <div class="drop-down absolute z-10 -mt-3">
            <div class="shadow-lg bg-gray-800 rounded px-4 py-4 flex-wrap justify-center">
              <div class="flex justify-center">
                <%= link_to(edit_project_path(@project),
                              class: "text-center bg-blue-100 hover:bg-blue-200
                                      border border-gray-400 py-1 px-2 rounded") do %>
                  <%= t('archive_project') %>
                <% end %>
              </div>
              <div class="mt-2 flex justify-center">
                <%= button_to(t('.delete_project'),
                                project_path(@project),
                                method: :delete,
                                class: "w-32 text-center bg-red-600 hover:bg-red-500
                                        border border-red-600 hover:border-red-500
                                        py-1 px-2 rounded text-white",
                                data: { confirm: t('.delete_confirm')}) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="w-full flex flex-col flex-wrap bg-white border border-gray-400 shadow-xl rounded-lg lg:mt-3 p-4">
      <div class="flex flex-wrap items-center">
        <div class="w-full flex">
          <div class="w-3/4 flex rounded shadow-xl border border-gray-400 bg-white mr-4 p-4">
            <div class="px-2">
              <div class="flex -mx-2">
                <div class="w-1/3 px-2">
                  <h1 class="text-xl font-bold text-gray-800">Details</h1>
                  <p class="text-sm">Here is your discription of the project. You wrote this when
                    creating
                    a new project.</p>
                  <h1 class="text-xl font-bold text-gray-800">Project address</h1>
                  <p class="text-sm">Here is your discription of the project. You wrote this when
                    creating
                    a new project.</p>
                  <h1 class="text-xl font-bold text-gray-800">Details</h1>
                  <p class="text-sm">Here is your discription of the project. You wrote this when
                    creating
                    a new project.</p>
                </div>
                <div class="w-1/3 px-2">
                  <h1 class="text-xl font-bold text-gray-800">Details</h1>
                  <p class="text-sm">Here is your discription of the project. You wrote this when
                    creating
                    a new project.</p>
                </div>
                <div class="w-1/3 px-2">
                  <h1 class="text-xl font-bold text-gray-800">Summary</h1>
                  <h2 class="text-gray-800 font-bold">Tasks: <span
                                            class="text-black font-normal">27</span></h2>
                  <h2 class="text-gray-800 font-bold">Hours: <span class="text-black font-normal">108
                      h</span></h2>
                </div>
              </div>
            </div>
          </div>
          <div class="w-1/4">
            <%= render(@project.customer) %>
          </div>
        </div>
      </div>
      <div class="flex mb-4 mt-4 -mx-2">
        <div class="w-1/3 px-2">
          <div
                        class="bg-blue-700 h-12 flex items-center justify-center text-white font-bold rounded hover:bg-blue-500">
            Tasks</div>
        </div>
        <div class="w-1/3 px-2">
          <div
                        class="bg-white h-12 flex items-center justify-center text-gray-900 font-bold rounded border border-gray-500 hover:bg-blue-500 hover:text-white">
            Timeline
          </div>
        </div>
        <div class="w-1/3 px-2">
          <div
                        class="bg-white h-12 flex items-center justify-center text-gray-900 font-bold rounded border border-gray-500 hover:bg-blue-500 hover:text-white">
            Invoices
          </div>
        </div>
      </div>
    </div>
    <div class="w-2/3 flex flex-wrap bg-white rounded shadow-md p-4">
      <div class="w-full text-center mb-8">
        <h2 class="text-xl mt-4">Timeline</h2>
        <p class="text-gray-500">Your project timeline</p>
      </div>
      <div class="w-1/2 h-64 pr-4 relative">
        <div class="bg-gray-200 h-24 rounded p-4">
          <p class="text-xl font-semibold text-teal-500">
            Projektstart
          </p>
        </div>
        <div class="absolute right-0 top-0 mt-10 -mr-3">
          <svg class="fill-current text-teal-500 w-6 ml-1" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd"
              d="M0 10C0 4.48 4.48 0 10 0s10 4.48 10 10-4.48 10-10 10S0 15.52 0 10zm2 0c0 4.41 3.59 8 8 8s8-3.59 8-8-3.59-8-8-8-8 3.59-8 8zm8-4.5c-2.49 0-4.5 2.01-4.5 4.5s2.01 4.5 4.5 4.5 4.5-2.01 4.5-4.5-2.01-4.5-4.5-4.5zM9 10c0 .55.45 1 1 1s1-.45 1-1-.45-1-1-1-1 .45-1 1z" />
          </svg>
        </div>
      </div>
      <div class="w-1/2 h-64 border-l border-gray-500">
        <div class="ml-3 mt-8">
          <p><%= l(@project.created_at, format: "%Y-%m-%d") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
