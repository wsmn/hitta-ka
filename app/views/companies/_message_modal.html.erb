<div class="w-full flex flex-wrap">
  <div class="w-full mx-auto p-4 lg:p-0">
    <!--Send message to company modal-->
    <div class="w-full lg:w-1/2 xl:w-1/3 mx-auto bg-white shadow-xl rounded mt-8">
      <div class="w-full flex border-b border-gray-400 p-8 items-center">
        <div class="w-3/4">
          <p class="font-bold text-2xl text-gray-800">
            Send message to
          </p>
          <p class="font-bold text-2xl text-blue-500">
            CÃ¶mpany AB
          </p>
        </div>
        <div class="w-1/4 flex items-center">
          <%= image_tag('message_map.svg', alt: 'Message')%>
        </div>
      </div>
      <div class="px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
        <div class="-mx-3 md:flex mb-6">
          <div class="md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="tracking-wide text-gray-800 text-base font-bold">
              First Name
            </label>
            <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2" id="grid-first-name" type="text">
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label class="tracking-wide text-gray-800 text-base font-bold">
              Last Name
            </label>
            <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white mt-2" id="grid-last-name" type="text">
          </div>
        </div>
        <div class="-mx-3 md:flex mb-6">
          <div class="md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="tracking-wide text-gray-800 text-base font-bold">
              Email
            </label>
            <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 mt-2" id="grid-email-adress" type="text">
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label class="tracking-wide text-gray-800 text-base font-bold">
              Phone 
              <p class="font-normal text-gray-600 inline">(optional)</p>
            </label>
            <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white mt-2" id="grid-phone-number" type="text">
          </div>
        </div>
        <div class="flex flex-wrap -mx-3">
          <div class="w-full px-3">
            <label class="tracking-wide text-gray-900 text-base font-bold">
              Message 
              <p class="font-normal text-gray-600 inline">(Max 1000 words)</p>
            </label>
            <textarea class="appearance-none mt-2 block w-full bg-gray-100 text-gray-700 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-32" id="subject" type="description"></textarea>
          </div>
        </div>
        <div class="w-full flex justify-end mt-6">
          <div class="w-1/4 mr-4">
            <button class="py-2 w-full shadow-md no-underline rounded-lg bg-red-500 text-white font-bold text-sm hover:text-white hover:bg-red-400 focus:outline-none active:shadow-none">
              Cancel
            </button>
          </div>
          <div class="w-1/4">
            <button class="py-2 w-full shadow-md no-underline rounded-lg bg-green-500 text-white font-bold text-sm hover:text-white hover:bg-green-400 focus:outline-none active:shadow-none">
              Send
            </button>
          </div>
        </div>
      </div>
    </div>
    <!--Send message to company modal end-->
    <!--Success message when sent-->
    <div class="w-full lg:w-1/2 xl:w-1/4 mx-auto bg-white shadow-xl rounded mt-8">
      <div class="w-full flex flex-wrap items-center p-8">
        <div class="mx-auto">
          <div class="rounded-full h-24 w-24 bg-green-500 inline-flex items-center justify-center">
            <span class="icon text-white">
              <i class="fas fa-2x fa-check"></i>
            </span>
          </div>
        </div>
        <div class="w-full text-center mt-4">
          <p class="font-semibold text-3xl text-gray-800">
            Success!
          </p>
          <p class="text-gray-800 inline">
            Your message was sent to
            <p class="text-blue-500 font-semibold inline">
              Company AB
              <p class="text-gray-800 inline">.</p>
            </p>
          </p>
          <p class=" text-gray-800 inline">
            Check your inbox for a confirmation and copy of your message.
          </p>
        </div>
        <div class="w-full flex justify-center mt-6">
          <div class="w-1/2">
            <button class="py-2 w-full shadow-md no-underline rounded-lg bg-green-500 text-white font-semibold text-sm hover:text-white hover:bg-green-400 focus:outline-none active:shadow-none">
              Ok
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
