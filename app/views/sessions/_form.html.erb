<div class="p-2">
  <div class="container flex max-w-sm mx-auto mt-4 bg-white rounded-lg shadow md:mt-8">
    <div class="w-full p-8 text-left">
      <h1 class="text-2xl font-bold text-gray-900"><%= t('.sign_in_to_your_account') %></h1>
      <% if Clearance.configuration.allow_sign_up? %>
        <div class="mb-4">
          <span class="text-sm text-gray-600">
            <%= t('.dont_have_an_account?') %>
          </span>
          <%= link_to(connect_path, class: 'text-gray-700 text-sm font-semibold') do %>
            <%= t('.connect') %>
          <% end %>
        </div>
      <% end %>
      <%= form_with(scope: :session, url: session_path, local: true) do |form|%>
        <div class="mb-4">
          <%= form.label(:email, class: "form-label lg:mb-2") %>
          <%= form.email_field(:email, id: 'email', class: 'form-input mt-2', autofocus: true) %>
        </div>
        <div class="mb-4">
          <%= form.label(:password, class: "form-label lg:mb-2") %>
          <%= form.password_field(:password, id: 'password', class: 'form-input mt-2') %>
        </div>
        <p class="mt-2 text-sm text-center text-gray-600 hover:text-gray-800">
          <%= link_to t(".forgot_password"), new_password_path %>
        </p>
        <div class="mt-6">
          <%= form.submit(class: "w-full bg-gray-800 hover:bg-gray-500 text-white text-sm h-10 font-semibold rounded") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
