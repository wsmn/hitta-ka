<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :account) %>
<% end %>
<% content_for(:header_title) do %>
  <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
<% end %>
<div class="w-full grid grid-cols-2 gap-6 p-4 lg:p-8">
  <%= render("show_heading") %>
  <%= render("stats") %>
  <%= render("projects", projects: @projects) %>
  <%= render("tasks") %>
  <%= render("invoices") %>
</div>
