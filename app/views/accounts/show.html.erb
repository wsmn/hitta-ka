<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :account) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title') %>
<% end %>
<div class="w-full">
  <div class="grid flex-grow grid-cols-5 gap-4 p-2 sm:p-3 xl:p-6">
    <div class="grid grid-cols-8 col-span-5">
      <div x-data="{ tab: 'week' }" class="col-span-8">
        <div class="flex flex-wrap justify-between p-1 sm:p-0 lg:pb-6">
          <div>
            <h1 class="text-3xl font-medium leading-none text-gray-900 sm:text-4xl"><%= current_user.name %></h1>
            <h2 class="text-lg sm:text-xl font-normal text-gray-600 mt-0.5"><%= current_user.organisations.first %></h2>
          </div>
          <div class="flex items-start mt-2 text-white sm:mt-0">
            <div class="flex flex-wrap-reverse justify-end">
              <div>
                <%= link_to(new_project_path, class: 'btn btn-blue btn-bounce sm:px-4 sm:py-2') do %>
                  <svg class="-ml-0.5 mr-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                    clip-rule="evenodd" />
                  </svg>
                  <%= t('.project') %>
                <% end %>
              </div>
              <div>
                <%= link_to(new_customer_path, class: 'btn btn-green btn-bounce sm:px-4 sm:py-2 ml-2') do %>
                  <svg class="-ml-0.5 mr-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                    clip-rule="evenodd" />
                  </svg>
                  <%= t('.customer') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="flex flex-col border shadow sm:rounded">
          <div class="flex-grow">
            <div class="flex items-center justify-between px-3 -mx-px -mt-px bg-white border rounded-t xl:px-6">
              <h3 class="py-4 text-base font-normal text-blue-500 sm:text-lg">
                <%= t('.statistics') %>
              </h3>
              <div>
                <div class="sm:hidden">
                  <select aria-label="Selected tab" class="block w-full form-select">
                    <option><%= t('.week') %></option>
                    <option><%= t('.month') %></option>
                    <option><%= t('.year') %></option>
                    <option><%= t('.total') %></option>
                  </select>
                </div>
                <div class="hidden sm:block">
                  <nav class="flex text-gray-500">
                    <button button
                      :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'week' }"
                      @click="tab = 'week'"
                      class="px-3 py-2 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
                      <%= t('.week') %>
                    </button>
                    <button button
                      :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'month' }"
                      @click="tab = 'month'"
                      class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
                      <%= t('.month') %>
                    </button>
                    <button button
                      :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'year' }"
                      @click="tab = 'year'"
                      class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
                      <%= t('.year') %>
                    </button>
                    <button button
                      :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'total' }"
                      @click="tab = 'total'"
                      class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
                      <%= t('.total') %>
                    </button>
                  </nav>
                </div>
              </div>
            </div>
            <%= render("stats") %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-span-5 md:col-span-3">
      <%= render("projects", projects: @projects) %>
      <%= render("invoices", invoices: @invoices) %>
    </div>
    <%= render("tasks", tasks: @tasks) %>
  </div>
</div>
