<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :settings) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title') %>
<% end %>
<div x-data="{ upload_modal: false }" class="w-full overflow-y-auto p-2 sm:p-3 xl:p-6">
  <h1 class="text-3xl font-bold text-gray-900 lg:hidden"><%= t('.title') %></h1>
  <div class="flex flex-wrap pt-4 lg:pt-0 pb-16 lg:-mx-2 xl:-mx-3">
    <div class="w-1/3 xl:w-1/4 hidden lg:flex lg:px-2 xl:px-3 max-w-md">
      <div class="w-full justify-center">
        <div class="bg-white border border-gray-500 rounded-md">
          <div class="border-b py-8">
            <div class="w-full flex justify-center mb-2">
              <div class="rounded-full h-32 w-32 bg-indigo-700 inline-flex items-center justify-center relative">
                <span class="text-white font-bold text-3xl">
                  Logo
                </span>
                <button @click="upload_modal = true" title="<%= t('.upload') %>"
                  class="rounded-full h-10 w-10 bg-blue-500 border-4 border-white absolute bottom-0 right-0 flex items-center justify-center focus:outline-none">
                  <svg class="h-5 w-6 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z"
                      clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
              <%= render('upload_logo_modal') %>
            </div>
            <div class="mx-auto text-center">
              <p class="text-2xl font-medium text-gray-900"><%= @organisation %></p>
              <p class="text-lg text-gray-600"><%= current_user.name %></p>
            </div>
          </div>
          <div class="p-4 border-b">
            <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide">
              <%= t('.company_address') %>
            </p>
            <div class="mt-3 font-medium text-gray-800 text-lg">
              <p class="">
                <%= t('.street_123') %>, <%= t('.post_code') %>
              </p>
              <p class="mt-1">
                <%= t('.city') %>, <%= t('.country') %>
              </p>
            </div>
          </div>
          <div class="p-4">
            <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide">
              <%= t('.contact_information') %>
            </p>
            <div class="mt-4 flex items-center text-blue-500">
              <svg class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-center inline ml-2">
                company@email.com
              </span>
            </div>
            <div class="mt-4 flex items-center text-blue-500">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
              <span class="text-center inline ml-2">
                company.com
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="w-full lg:w-2/3 max-w-5xl lg:px-2 xl:px-3">
      <div x-data="{ tab: 'account' }" class="flex flex-wrap bg-white rounded-lg border border-gray-500">
        <div class="w-full flex border-b border-gray-400 px-4">
          <button :class="{ 'text-blue-500 border-blue-500': tab === 'account' }" @click="tab = 'account'"
            class="flex items-center justify-center text-gray-600 font-medium hover:text-blue-500 border-b-2 border-transparent hover:border-blue-500 w-24 py-4 lg:px-6 -mb-px focus:outline-none">
            <span class="inline-flex flex items-center text-base">
              <svg class="h-5 w-5 -ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="ml-1">
                <%= t('.account') %>
              </span>
            </span>
          </button>
          <button :class="{ 'text-blue-500 border-blue-500': tab === 'company' }" @click="tab = 'company'"
            class="flex items-center justify-center text-gray-600 font-medium hover:text-blue-500 border-b-2 border-transparent hover:border-blue-500 w-24 py-4 lg:px-6 w-32 py-4 ml-3 -mb-px focus:outline-none">
            <span class="inline-flex flex items-center text-base">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="ml-1 lg:ml-2">
                <%= t('.company') %>
              </span>
            </span>
          </button>
          <button :class="{ 'text-blue-500 border-b-2 border-blue-500 -mb-px': tab === 'localization' }"
            @click="tab = 'localization'"
            class="flex items-center justify-center text-gray-900 font-medium p-6 px-8 mx-4 hidden">
            <span class="inline-flex flex items-center">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="ml-1 lg:ml-2">
                <%= t('.localization') %>
              </span>
            </span>
          </button>
          <button :class="{ 'text-blue-500 border-b-2 border-blue-500 -mb-px': tab === 'notifications' }"
            @click="tab = 'notifications'"
            class="flex items-center justify-center text-gray-900 w-40 py-4 lg:px-8 hidden">
            <span class="inline-flex flex items-center text-lg">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <span class="ml-1 lg:ml-2">
                <%= t('.notifications') %>
              </span>
            </span>
          </button>
        </div>
        <div class="w-full">
          <div x-show="tab === 'account'" class="flex-grow p-3 lg:px-4 xl:px-6 lg:py-4">
            <%= render('account_settings') %>
          </div>
          <div x-show="tab === 'company'" class="flex-grow p-3 lg:px-4 xl:px-6 lg:py-4">
            <%= render('company_settings') %>
          </div>
          <div x-show="tab === 'localization'" class="flex-grow p-6 lg:px-4 xl:px-6 lg:py-4">
            <%= render('localization_settings') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
