<div class="col-span-2 flex justify-between lg:justify-end px-2 pt-2 lg:p-0">
  <div class="lg:hidden">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
  </div>
  <div class="flex justify-end">
    <div class="flex items-start">
      <%= link_to(new_project_path, class: 'bg-blue-600 hover:bg-blue-500 py-2 px-3 rounded text-white font-medium flex items-center') do %>
        <svg class="h-5 w-5 font-bold text-gray-100 inline-block mr-2" fill="none" viewBox="0 0 24 24"
        stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <%= t('.new_project') %>
      <% end %>
    </div>
    <div class="flex items-start ml-2">
      <%= link_to(new_customer_path, class: 'bg-green-600 hover:bg-green-500 py-2 px-3 rounded text-white font-medium flex items-center') do %>
        <svg class="h-5 w-5 font-bold text-gray-100 inline-block mr-2" fill="none" viewBox="0 0 24 24"
        stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <%= t('.new_customer') %>
      <% end %>
    </div>
  </div>
</div>
