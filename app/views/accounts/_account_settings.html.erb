<%= form_with(model: current_user, url: account_path, local: true, class: "w-full") do |form| %>
  <h2 class="text-2xl font-medium text-gray-900"><%= t('.account_settings') %></h2>
  <div class="flex flex-col w-full mt-4">
    <div class="mb-6 -mx-3 md:flex">
      <div class="px-3 mb-6 md:w-1/2 md:mb-0">
        <%= form.label(:name, class: "form-label lg:mb-2") %>
        <%= form.text_field(:name, id: 'name',
        class: "form-input mt-2") %>
      </div>
      <div class="px-3 md:w-1/2">
        <%= form.label(:email, class: "form-label lg:mb-2") %>
        <div class="flex">
          <div
            class="flex items-center justify-center w-12 mt-2 bg-gray-100 border-t border-b border-l border-gray-400 rounded-l">
            <span class="text-gray-700">
              <%= render('application/icons/email') %>
            </span>
          </div>
          <%= form.text_field(:email, id: 'email',
                    class: "form-input rounded-l-none rounded-r mt-2") %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-col w-full">
    <div class="flex items-center mt-8 mb-4 font-medium text-gray-900">
      <span class="flex inline-flex items-center ">
        <span class="mr-2 text-lg">
          <%= t('.change_password') %>
        </span>
        <svg class="w-5 h-5 -mt-1 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      </span>
    </div>
    <div class="mb-6 -mx-3 md:flex">
      <div class="px-3 mb-6 md:w-1/2 md:mb-0">
        <%= form.label(:current_password, class: "form-label lg:mb-2") %>
        <%= form.password_field(:current_password, id: 'current_password', class: "form-input mt-2") %>
        <% if current_user.errors[:current_password].any? %>
          <ul class="text-red-800 list-disc list-inside">
            <% current_user.errors[:current_password].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="px-3 md:w-1/2">
        <%= form.label(:new_password, class: "form-label lg:mb-2") %>
        <%= form.password_field(:new_password, id: 'new_password', class: "form-input mt-2") %>
        <% if current_user.errors[:new_password].any? %>
          <ul>
            <% current_user.errors[:new_password].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class="flex w-full pt-3 border-t">
    <div class="flex items-center justify-end w-full">
      <div class="">
        <%= link_to(t('.cancel'), settings_account_path, class: "w-full px-3 text-blue-600 uppercase font-bold text-sm hover:text-blue-300") %>
      </div>
      <div class="ml-2">
        <%= form.submit(t('.save'), class: "btn btn-blue") %>
      </div>
    </div>
  </div>
<% end %>
