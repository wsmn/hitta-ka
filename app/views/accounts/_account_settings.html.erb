<h2 class="text-gray-900 text-2xl font-medium"><%= t('.account_settings') %></h2>
<div class="w-full xl:w-3/4 flex flex-col my-4">
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="text-gray-700 font-semibold">
        <%= t('.first_name') %>
      </label>
      <input
        class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-1 px-4 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
        id="grid-first-name" type="text">
      </div>
      <div class="w-full md:w-1/2 px-3">
        <label class="text-gray-700 font-semibold">
          <%= t('.last_name') %>
        </label>
        <input
        class="h-10 appearance-none block w-full bg-white text-gray-700 border border-gray-400 rounded-md py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
        id="grid-last-name" type="text">
        </div>
      </div>
      <div class="flex flex-wrap -mx-3">
        <div class="w-full px-3">
          <label class="text-gray-700 font-semibold">
            <%= t('.email') %>
          </label>
          <input
        class="h-10 appearance-none mt-1 block w-full bg-white text-gray-700 border border-gray-400 rounded-md px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
        type="email">
          </div>
        </div>
        <div class="mt-8 flex items-center text-gray-900 font-medium">
          <span class="inline-flex flex items-center ">
            <span class="text-lg mr-2">
              <%= t('.change_password') %>
            </span>
            <svg class="h-5 w-5 lg:h-6 lg:w-6 -mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </span>
        </div>
        <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center mt-8">
          <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
            <%= t('.current_password') %>
          </div>
          <div class="w-full">
            <div class="relative">
              <input
          class="h-10 appearance-none mt-1 block w-full bg-white text-gray-700 border border-gray-400 rounded-md px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
          type="email">
              </div>
            </div>
          </div>
          <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
            <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
              <%= t('.new_password') %>
            </div>
            <div class="w-full">
              <div class="relative">
                <input
          class="h-10 appearance-none mt-1 block w-full bg-white text-gray-700 border border-gray-400 rounded-md px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
          type="email">
                </div>
              </div>
            </div>
            <div class="flex flex-wrap xl:flex-no-wrap mb-6 items-center">
              <div class="w-full lg:w-1/2 pr-2 text-gray-700 font-semibold">
                <%= t('.confirm_password') %>
              </div>
              <div class="w-full">
                <div class="relative">
                  <input
          class="h-10 appearance-none mt-1 block w-full bg-white text-gray-700 border border-gray-400 rounded-md px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-500 mt-2"
          type="email">
                  </div>
                </div>
              </div>
            </div>
