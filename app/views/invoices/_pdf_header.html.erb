<div class="clearfix">
  <div class="float-left w-2/3">
    <% if current_organisation.logo.attached? %>
      <%= image_tag(wicked_blob_path(current_organisation.logo), class: 'h-24 w-auto object-scale-down', alt: 'logo') %>
    <% else %>
      <h1 class="text-5xl font-black leading-none"><%= current_user.organisations.first %></h1>
    <% end %>
  </div>
  <div class="float-left w-1/3 pr-10">
    <h1 class="text-4xl font-bold text-right text-orange-600"><%= t('invoices.pdf.invoice') %></h1>
    <div class="clearfix float-right w-56 mt-4">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.invoice_number') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right">#<%= @invoice.invoice_nbr %></span>
      </div>
    </div>
    <div class="clearfix float-right w-56 mt-1">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.invoice_date') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right"><%= @invoice.invoice_date %></span>
      </div>
    </div>
  </div>
</div>
