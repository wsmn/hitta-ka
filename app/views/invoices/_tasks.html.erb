<div class="">
  <div class="border-b-2 rounded-t px-6 hidden lg:block">
    <div class="w-full flex text-sm uppercase font-semibold text-gray-900 py-4">
      <div class="w-1/4 xl:w-1/3 flex">
        Task
      </div>
      <div class="w-1/4 xl:w-1/5 flex">
        Date
      </div>
      <div class="w-1/5 xl:w-1/5">
        Cost
      </div>
      <div class="w-1/6 xl:w-1/6">
        Hours
      </div>
      <div class="w-1/6 xl:w-1/6">
        Total
      </div>
      <div class="w-4 flex justify-center md:justify-start">
      </div>
    </div>
  </div>
  <div class="px-6 xl:px-6 py-4 hidden lg:block">
    <% if tasks.any? %>
      <% tasks.each do |task| %>
        <%= render("invoices/task_row", invoice: invoice, task: task) %>
      <% end %>
    <% else %>
      <div class="text-center p-6 bg-white rounded">
        <div class="w-24 mx-auto mt-4 mb-4">
          <%= image_tag('no_timelogs.svg', alt: 'Builders')%>
        </div>
        <p class="text-2xl text-gray-900 font-medium mb-4"><%= t('.add_tasks_now') %></p>
        <p class="text-gray max-w-xs mx-auto mb-6"><%= t('.use_the_button_down_below_to_add_tasks_to_your_invoice') %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="px-4 block lg:hidden">
    <% if tasks.any? %>
      <% amount = 0 %>
      <% tasks.each do |task| %>
        <%= render("invoices/task_row_mobile", invoice: invoice, task: task) %>
        <% amount += @total %>
      <% end %>
    <% else %>
      <div class="text-center p-6 bg-white rounded">
        <div class="w-24 mx-auto mt-4 mb-4">
          <%= image_tag('no_timelogs.svg', alt: 'Builders')%>
        </div>
        <p class="text-2xl text-gray-900 font-medium mb-4"><%= t('.add_tasks_now') %></p>
        <p class="text-gray max-w-xs mx-auto mb-6"><%= t('.use_the_button_down_below_to_add_tasks_to_your_invoice') %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="py-4 border-t border-gray-300 flex items-center justify-between px-6">
    <div class="">
      <div class="mr-2">
        <%= render('invoices/form_tasks', invoice: @invoice, tasks: @new_tasks) %>
      </div>
    </div>
    <div class="text-gray-800 font-medium">
      <% if tasks.any? %>
        <%= t('.total_amount') %>: <span class="text-green-500 text-lg ml-1"><%= number_to_currency(amount) %></span>
      <% end %>
    </div>
  </div>
</div>
