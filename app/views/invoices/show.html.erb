<% content_for(:sidebar) do %>
  <%= render('application/account_menu', current: :invoices) %>
<% end %>
<% content_for(:header_title) do %>
  <%= t('.title') %>
<% end %>
<div class="w-full p-2 overflow-y-auto lg:flex-grow lg:p-4 xl:p-6">
  <div class="flex flex-wrap">
    <div class="flex flex-wrap flex-grow lg:-mx-2 xl:-mx-3">
      <div class="w-full lg:w-1/3 lg:max-w-md lg:px-2 xl:px-3">
        <%= render('invoice_card') %>
      </div>
      <div class="w-full lg:w-2/3 xl:flex-grow lg:px-2 xl:px-3">
        <div class="flex-grow mt-4 bg-white border border-gray-400 rounded-md lg:mt-0">
          <div class="flex-grow">
            <%= render('invoices/tasks/listing', invoice: @invoice, tasks: @invoice.tasks, new_tasks: @new_tasks ) %>
          </div>
        </div>
        <%= render('process_invoice') %>
      </div>
    </div>
  </div>
</div>
