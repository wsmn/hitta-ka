<div class="flex">
  <div class="w-2/3">
    <h1 class="text-4xl font-semibold leading-none"><%= current_organisation %></h1>
  </div>
  <div class="w-1/3 text-xs">
    <h1 class="text-3xl font-bold text-right text-orange-600"><%= t('invoices.pdf.invoice') %></h1>
    <div class="float-right w-56 mt-4">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.invoice_number') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right">#<%= invoice.invoice_nbr %></span>
      </div>
    </div>
    <div class="float-right w-56 mt-1">
      <div class="float-left w-1/2">
        <span class="text-left"><%= t('invoices.pdf.invoice_date') %>:</span>
      </div>
      <div class="float-left w-1/2 text-right">
        <span class="text-right"><%= invoice.invoice_date %></span>
      </div>
    </div>
  </div>
</div>
