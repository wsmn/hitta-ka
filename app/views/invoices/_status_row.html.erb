<%= link_to(customer_invoice_path(invoice.customer, invoice), class: "flex w-full px-3 xl:px-6 py-4 text-gray-900 items-center border-b border-gray-200 hover:bg-orange-100") do %>
  <div class="flex items-center w-1/2 break-all xl:w-2/5">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-10 h-10">
        <div class="inline-flex items-center justify-center w-8 h-8 bg-orange-500 rounded-full sm:h-10 sm:w-10">
          <span class="text-white icon">
            <i class="hidden fas fa-lg fa-file-invoice sm:inline-block"></i>
            <i class="fas fa-sm fa-file-invoice sm:hidden"></i>
          </span>
        </div>
      </div>
      <div class="ml-2 sm:ml-4">
        <div class="text-base leading-5 text-gray-800">
          <%= invoice.customer %>
        </div>
        <div class="text-xs leading-5 text-gray-500 sm:text-sm">#<%= invoice.invoice_nbr %></div>
      </div>
    </div>
  </div>
  <div class="flex justify-center hidden w-1/3 md:flex">
    <p class=""><%= l(invoice.invoice_date) if invoice.invoice_date.present? %></p>
  </div>
  <div class="flex justify-center w-1/3">
    <p class="text-md <%= invoice.past_due? ? "text-red-500" : "text-green-500"%>">
      <%= l(invoice.due_date, format: "%Y-%m-%d") if invoice.due_date.present? %>
    </p>
  </div>
  <div class="w-1/4 px-2 xl:w-1/6 md:px-4">
    <div class="text-right text-gray">
      <%= number_to_currency(invoice.amount) %>
    </div>
  </div>
<% end %>
