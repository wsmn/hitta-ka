<div class="flex-grow mt-6 bg-white border rounded-md shadow">
  <div class="flex-grow">
    <div class="p-4 lg:px-6 xl:px-6 lg:pt-6">
      <h2 class="text-xl font-medium text-gray-900 xl:text-2xl">Details</h2>
    </div>
    <div class="px-3 py-4 lg:px-6 xl:px-6">
      <div class="flex items-center justify-between flex-grow">
        <div class="flex">
          <div class="flex items-center justify-center w-10 h-10 text-white bg-blue-500 rounded-full lg:h-12 lg:w-12">
            <svg class="w-4 h-4 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="ml-2 md:ml-4">
            <h3 class="text-base font-medium text-gray-700 lg:text-lg xl:text-xl"><%= t('.email_invoice') %></h2>
            <p class="text-xs leading-none text-gray-600 lg:text-sm xl:text-base">Email your invoice to your customer.
            </p>
          </div>
        </div>
        <div class="ml-1">
          <button class="w-20 px-2 py-2 text-xs normal-case md:w-24 md:text-sm btn btn-blue">
            <%= t('.send') %> <%= icon('fas', 'envelope-open', class: "ml-2") %>
          </button>
        </div>
      </div>
      <div class="flex flex-wrap items-center justify-between flex-grow mt-10" x-data="{ sent: false }">
        <div class="flex">
          <div class="flex items-center justify-center w-10 h-10 bg-yellow-500 rounded-full lg:h-12 lg:w-12">
            <svg class="w-4 h-4 text-white lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div class="ml-2 md:ml-4">
            <h3 class="text-base font-medium text-gray-700 lg:text-lg xl:text-xl">Mark as sent</h2>
            <p class="text-xs leading-none text-gray-600 lg:text-sm xl:text-base">Click here to mark the invoice as
              sent.</p>
          </div>
        </div>
        <div x-show="sent" class="hidden lg:hidden xl:block">
          <p class="text-lg font-medium text-green-500">Invoice sent <%= Time.now.strftime("%m/%d/%Y") %></p>
        </div>
        <div class="ml-1">
          <button @click="sent = !sent" @click="sent = true" @click="sent = !sent" class="w-20 text-xs normal-case bg-yellow-500 md:w-24 btn md:text-sm">
            <%= t('.sent') %> <%= icon('fas', 'check', class: "ml-2") %>
          </button>
        </div>
        <div x-show="sent" class="flex w-full mt-4 xl:hidden">
          <div class="mx-auto">
            <p class="text-lg font-medium text-green-500">Invoice sent <%= Time.now.strftime("%m/%d/%Y") %></p>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-between flex-grow mt-10">
        <div class="flex">
          <div class="flex items-center justify-center w-10 h-10 bg-green-500 rounded-full lg:h-12 lg:w-12">
            <svg class="w-4 h-4 text-white lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-2 md:ml-4">
            <h3 class="text-base font-medium text-gray-700 lg:text-lg xl:text-xl">Mark as paid</h2>
            <p class="text-xs leading-none text-gray-600 lg:text-sm xl:text-base">Click here to mark the invoice as
              sent.</p>
          </div>
        </div>
        <div class="ml-1">
          <button
            class="w-20 px-2 py-2 text-xs font-bold text-white no-underline bg-green-500 rounded md:w-24 md:text-sm hover:text-white hover:bg-green-400 focus:outline-none active:shadow-none">
            <%= t('.paid') %> <%= icon('fas', 'dollar-sign', class: "ml-2") %>
          </button>
        </div>
      </div>
      <div class="flex items-center justify-between flex-grow mt-10">
        <div class="flex">
          <div class="flex items-center justify-center w-10 h-10 bg-gray-500 rounded-full lg:h-12 lg:w-12">
            <svg class="w-4 h-4 text-white lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-base font-medium text-gray-700 lg:text-lg xl:text-xl">Download</h2>
            <p class="text-xs leading-none text-gray-600 lg:text-sm xl:text-base">Use this option to download your
              invoice as a pdf.</p>
          </div>
        </div>
        <div class="ml-1">
          <%= link_to(t('.download'), customer_invoice_path(@invoice.customer, :format => :pdf),
          class: "px-3 py-2 text-xs md:text-sm shadow-md no-underline rounded bg-gray-500 text-white font-bold hover:text-white hover:bg-gray-400 focus:outline-none active:shadow-none") %>
        </div>
      </div>
    </div>
    <div class="px-3 py-4 bg-gray-300 rounded-b lg:px-6 xl:px-6 lg:pt-6">
      <div class="flex items-center justify-between flex-grow">
        <div class="flex">
          <div class="flex items-center justify-center w-10 h-10 text-white bg-red-500 rounded-full lg:h-12 lg:w-12">
            <%= render('application/icons/trash') %>
          </div>
          <div class="ml-4">
            <h3 class="text-base font-medium text-gray-700 lg:text-lg xl:text-xl">Delete</h2>
            <p class="text-xs leading-none text-gray-600 lg:text-sm xl:text-base">Do you want to delete the invoice?
            </p>
          </div>
        </div>
        <div class="ml-1">
          <div class="flex flex-col">
            <%= render('application/delete_button',
                   path: customer_invoice_path(@invoice.customer, @invoice),
                   title: t('.delete'),
                   confirmation: t('.delete_confirm'))%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
